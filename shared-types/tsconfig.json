{
  "compilerOptions": {
    "module": "NodeNext",  // Должно совпадать с moduleResolution
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}